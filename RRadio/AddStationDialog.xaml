<Window x:Class="RRadio.AddStationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add new station" Height="118" Width="250" ResizeMode="NoResize">
    <StackPanel Margin="10">
        <StackPanel.Resources>
            <Style TargetType="TextBox">
                <Setter Property="Margin" Value="0,5,0,5" />
            </Style>
        </StackPanel.Resources>
        <TextBlock>Enter URL of radio station:</TextBlock>
        <TextBox Name="TextBoxAddStation"></TextBox>
        <Button Name="ButtonOK" Click="ButtonOK_OnClick">OK</Button>
    </StackPanel>
</Window>
